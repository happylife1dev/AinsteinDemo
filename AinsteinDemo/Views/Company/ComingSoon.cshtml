@model AinsteinDemo.Models.ReportEmbedConfig

@{ 
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div style="display: flex; height:100%">
    @Html.Partial("~/Views/Shared/NavPanel.cshtml")
    <main class="main-container" role="main">
        <!-- <div>
            <input type="text" id="EarningsCoTags" />
        </div> -->
        <form action="javascript:void(0)">

            <div class="form-group searchBar">
                <input class="form-control" id="search_tags" placeholder="Enter Ticker Symbol, e.g., AAPL">
                <button type="submit"><i class="fas fa-search"></i></button>
            </div>

            <div class="tab-content" id="v-pills-tabContent">
                <div class="row">
                    <div class="col-12 menu-tab">
                        @*     <img src="~/Content/images/cube-logo.png" alt="" class="mr-3" />*@       
                        <ul id="nav-tab" role="tablist">
                                    <li>
                                        <a class="passive" id="nav-earnings-tab" data-toggle="tab" href="/Company/Details/@Model.Ticker/"
                                           aria-controls="nav-earnings" aria-selected="true" tabindex="0">
                                            Company Snapshot
                                        </a>
                                    </li>
                                    <li>
                                        <a class="active" id="nav-industry2-tab" data-toggle="tab" href="/Company/ComingSoon"
                                           aria-controls="nav-industry2" aria-selected="false" tabindex="-1">
                                            Relative View - Peer Comparison

                                        </a>
                                    </li>
                                    <li>
                                        <a class="passive" id="nav-earnings-tab" data-toggle="tab" href="/Company/CashFlow/@Model.Ticker/"
                                           aria-controls="nav-earnings" aria-selected="true" tabindex="1">
                                            Cash Flow
                                        </a>
                                    <li>
                                        <a class="passive" id="nav-earnings-tab" data-toggle="tab" href="/Company/Revenue/@Model.Ticker/"
                                           aria-controls="nav-earnings" aria-selected="true" tabindex="2">
                                            Revenue
                                        </a>
                                    </li>
                                    <li>
                                        <a class="passive" id="nav-earnings-tab" data-toggle="tab" href="/Company/Earnings/@Model.Ticker/"
                                           aria-controls="nav-earnings" aria-selected="true" tabindex="3">
                                            Earnings
                                        </a>
                                    </li>
</ul>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 p-4 text-center">
                    <br/>
                    <br/>
                    <br/>
                    <h2 class="mt-4 pt-4">
                        Coming Soon
                    </h2>
                </div>
            </div>
        </form>
    </main>
</div>
